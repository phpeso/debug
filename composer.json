{
    "name": "peso/debug",
    "type": "library",
    "description": "Dev tools for Peso components",
    "keywords": ["dev", "peso"],
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Debug\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Debug\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "peso/core": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
